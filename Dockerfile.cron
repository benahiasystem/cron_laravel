FROM php:8.2-fpm-alpine

ENV TZ=America/Bogota 

# Configuraci贸n de zona horaria
RUN apk add --no-cache tzdata
RUN ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ > /etc/timezone


# Instalaci贸n de bash, moreutils y supervisor
RUN apk add --no-cache bash moreutils supervisor

# Instalaci贸n de extensiones de PHP
RUN docker-php-ext-install pdo pdo_mysql

# Agregar archivo crontab
ADD crontab /etc/crontabs/root

# Agregar configuraci贸n de Supervisor
ADD supervisor.conf /etc/supervisor/conf.d/ 

CMD ["crond", "-f"]

